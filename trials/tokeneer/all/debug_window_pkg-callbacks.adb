with System; use System;
with Gdk.Event; use Gdk.Event;
with Gdk.Types; use Gdk.Types;
with Gtk.Accel_Group; use Gtk.Accel_Group;
with Gtk.Object; use Gtk.Object;
with Gtk.Enums; use Gtk.Enums;
with Gtk.Style; use Gtk.Style;

package body Debug_Window_Pkg.Callbacks is

   use Gtk.Arguments;

   ---------------------------------
   -- On_Debugwindow_Delete_Event --
   ---------------------------------

   function On_Debugwindow_Delete_Event
     (Object : access Gtk_Widget_Record'Class;
      Params : Gtk.Arguments.Gtk_Args) return Boolean
   is
      Arg1 : Gdk_Event := To_Event (Params, 1);
   begin
      Dbg_Window := null;
      return False;
   end On_Debugwindow_Delete_Event;

   ----------------------
   -- On_Close_Clicked --
   ----------------------

   procedure On_Close_Clicked
     (Object : access Gtk_Button_Record'Class)
   is
   begin
      Destroy(Debug_Window_Pkg.Dbg_Window);
      Debug_Window_Pkg.Dbg_Window := null;
   end On_Close_Clicked;

end Debug_Window_Pkg.Callbacks;

